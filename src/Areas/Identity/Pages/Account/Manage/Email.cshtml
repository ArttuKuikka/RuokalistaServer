@page
@model EmailModel
@{
    ViewData["Title"] = "Vaihda sähköpostiosoite";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger" style="color: black"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="form-floating input-group">
                    <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    <label asp-for="Email" class="form-label"></label>
                </div>
            }
            else
            {
                <div class="form-floating" style="color: black">
                    <input asp-for="Email" class="form-control" disabled />
                    <label class="form-label">Nykyinen sähköposti</label>
                    
                </div>
            }
            <br />
            <div class="form-floating" style="color: black">
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                <label class="form-label">Uusi sähköposti</label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <br />
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Vaihda sähköposti</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
