@page
@model RegisterModel
@{
    ViewData["Title"] = "Luo uusi tili";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <input asp-for="Input.Token" class="form-control" hidden="hidden" aria-required="true" placeholder="0000000xxx...." />
            <span asp-validation-for="Input.Token" class="text-danger"></span>

            <div class="form-floating mb-3 text-black">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nimi@mail.fi" />
                <label class="form-label" >Sähköposti</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-black">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="salasana" />
                <label class="form-label" >Salasana</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-black">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="salasana" />
                <label class="form-label" >Vahvista salasana</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Luo tili</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
