@model RuokalistaServer.ViewModels.IndexViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    var IsEmbedded = false;
    if(ViewBag.Embed != null)
    {
        if(ViewBag.Embed == true)
        {
            Layout = "_LayoutApp";
            IsEmbedded = true;
        }
    }

    if(Model.Ruokalista != null)
    {
        if (Model.Printing)
        {
            ViewData["Title"] = $"Viikko {Model.Ruokalista.WeekId}";
        }
        else if (Model.ShowingCurrentWeeksMenu)
        {
            ViewData["Title"] = Localizer["ThisWeeksMenu"];
        }
        else
        {
            ViewData["Title"] = string.Format(Localizer["WeekMenu"], Model.Ruokalista.WeekId);
        }
        
    }
    else
    {
        ViewData["Title"] = Localizer["NoMenuAvailable"];
    }
}


<div class="text-center print-ensure-display" style="font-family:'Ruokalistafont', sans-serif;">

    @{
        if(Model.Ruokalista != null)
        {
            if (Model.Printing && Model.ShowingKasvisruokalista)
            {
                <div class="siteTitle">@string.Format(Localizer["WeekVegetarianMenu"], Model.Ruokalista.WeekId)</div>
            }
            else if (Model.Printing)
            {
                <div class="siteTitle">@string.Format(Localizer["WeekMenu"], Model.Ruokalista.WeekId)</div>
            }
            else if (Model.ShowingCurrentWeeksMenu && Model.ShowingKasvisruokalista)
            {
                <div class="siteTitle">@string.Format(Localizer["ThisWeeksVegetarianMenu"] + "({0})", Model.Ruokalista.WeekId)</div>
            }
            else if (Model.ShowingNextWeeksMenu && Model.ShowingKasvisruokalista)
            {
                <div class="siteTitle">@string.Format(Localizer["NextWeeksVegetarianMenu"] + "({0})", Model.Ruokalista.WeekId)</div>
            }
            else if (Model.ShowingNextWeeksMenu)
            {
                <div class="siteTitle">@string.Format(Localizer["NextWeeksMenu"] + "({0})", Model.Ruokalista.WeekId)</div>
            }
            
            else if(Model.ShowingCurrentWeeksMenu)
            {
                <div class="siteTitle">@string.Format(Localizer["ThisWeeksMenu"] + "({0})", Model.Ruokalista.WeekId)</div>
            }
            
            else if (Model.ShowingKasvisruokalista)
            {
                <div class="siteTitle">@string.Format(Localizer["WeekVegetarianMenu"], Model.Ruokalista.WeekId)/@Model.Ruokalista.Year</div>
            }
            else
            {
                <div class="siteTitle">@string.Format(Localizer["WeekMenu"], Model.Ruokalista.WeekId)/@Model.Ruokalista.Year</div>
            }



            <div class="@(!Model.Printing && Model.ShowingCurrentWeeksMenu && DateTime.Now.DayOfWeek == DayOfWeek.Monday ? "highlighted" : "")">
                <h3 class="dayTitle">@Localizer["Monday"]</h3>
                <h4 class="ruokaText">@Model.Ruokalista.Maanantai</h4>
            
            </div>
            <br />


            <div class="@(!Model.Printing && Model.ShowingCurrentWeeksMenu && DateTime.Now.DayOfWeek == DayOfWeek.Tuesday ? "highlighted" : "")">
                <h3 class="dayTitle">@Localizer["Tuesday"]</h3>
                <h4 class="ruokaText">@Model.Ruokalista.Tiistai</h4>

            </div>
            <br />

            <div class="@(!Model.Printing && Model.ShowingCurrentWeeksMenu && DateTime.Now.DayOfWeek == DayOfWeek.Wednesday ? "highlighted" : "")">
                <h3 class="dayTitle">@Localizer["Wednesday"]</h3>
                <h4 class="ruokaText">@Model.Ruokalista.Keskiviikko</h4>

            </div>
            <br />

            <div class="@(!Model.Printing && Model.ShowingCurrentWeeksMenu && DateTime.Now.DayOfWeek == DayOfWeek.Thursday ? "highlighted" : "")">
                <h3 class="dayTitle">@Localizer["Thursday"]</h3>
                <h4 class="ruokaText">@Model.Ruokalista.Torstai</h4>

            </div>
            <br />

            <div class="@(!Model.ShowingCurrentWeeksMenu && DateTime.Now.DayOfWeek == DayOfWeek.Friday ? "highlighted" : "")">
                <h3 class="dayTitle">@Localizer["Friday"]</h3>
                <h4 class="ruokaText">@Model.Ruokalista.Perjantai</h4>

            </div>
            <br />

       

            <br />

            <p>@Localizer["DietaryInfo"]</p>
            
      }
      else
      {
            <div class="siteTitle">@Localizer["NoMenuForThisWeek"]</div>
      }

}

    @if (!IsEmbedded)
    {
        <div class="no-print">
            @if (Model.KasviruokalistaExists && !Model.ShowingKasvisruokalista && Model.Ruokalista != null)
            {
                <a class="btn" style="background-color: forestgreen; color:white; font-size: 1.3em;  margin: 0.5em 0em 0.5em 0em" href="/Kasvisruokalista/@Model.Ruokalista.Year/@Model.Ruokalista.WeekId">@Localizer["VegetarianMenu"]</a>
            }
            else if (Model.Ruokalista != null && Model.KasviruokalistaExists)
            {
                <a class="btn btn-primary" style="font-size: 1.3em;  margin: 0.5em 0em 0.5em 0em" href="/@Model.Ruokalista.Year/@Model.Ruokalista.WeekId">@Localizer["RegularMenu"]</a>
            }


            <div>
                <a class="btn btn-primary" href="/Listaa" style="margin: 0em 0.5em 0.5em 0em;">&#x27F5; @Localizer["AllMenus"]</a>


                @if (Model.Ruokalista != null && Model.NextWeeksMenuExists && !Model.ShowingNextWeeksMenu)
                {
                    //jos vuosi on vaihtunut niin ei toimi
                    <a class="btn btn-primary" href="/@Model.Ruokalista.Year/@(Model.Ruokalista.WeekId + 1)" style="margin: 0em 0em 0.5em 0em">@Localizer["NextWeek"] &#x27F6;</a>
                }

            </div>
        </div>
    }


    

</div>
<br />

