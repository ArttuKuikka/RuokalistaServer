@model RuokalistaServer.Models.Ruokalistat
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateMenu"];

}

<h1>@Localizer["CreateMenu"]</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4" style="width:100%">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="rounded-container" style="max-width: 15em;">
                <div class="form-group">
                    <label class="control-label">@Localizer["Year"]</label>
                    <input style="font-size: 1.5em;" asp-for="Ruokalista.Year" class="form-control" />
                    <span asp-validation-for="Ruokalista.Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">@Localizer["Week"]</label>
                    <input style="font-size: 1.5em;" asp-for="Ruokalista.WeekId" class="form-control" />
                    <span asp-validation-for="Ruokalista.WeekId" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="rounded-container" style="max-width: 50em;">
                <h3>@Localizer["Menu"]</h3>
                <div class="form-group">
                    <label asp-for="Ruokalista.Maanantai" class="control-label"></label>
                    <input asp-for="Ruokalista.Maanantai" class="form-control" />
                    <span asp-validation-for="Ruokalista.Maanantai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ruokalista.Tiistai" class="control-label"></label>
                    <input asp-for="Ruokalista.Tiistai" class="form-control" />
                    <span asp-validation-for="Ruokalista.Tiistai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ruokalista.Keskiviikko" class="control-label"></label>
                    <input asp-for="Ruokalista.Keskiviikko" class="form-control" />
                    <span asp-validation-for="Ruokalista.Keskiviikko" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ruokalista.Torstai" class="control-label"></label>
                    <input asp-for="Ruokalista.Torstai" class="form-control" />
                    <span asp-validation-for="Ruokalista.Torstai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ruokalista.Perjantai" class="control-label"></label>
                    <input asp-for="Ruokalista.Perjantai" class="form-control" />
                    <span asp-validation-for="Ruokalista.Perjantai" class="text-danger"></span>
                </div>
                
            </div>
            <br />

            @if (GlobalConfig.KasvisruokalistaEnabled)
            {
                <div class="rounded-container" style="max-width: 50em;">
                    <h3>@Localizer["VegetarianMenu"]</h3>
                    <div class="form-group">
                        <label asp-for="KasvisRuokalista.Maanantai" class="control-label"></label>
                        <input asp-for="KasvisRuokalista.Maanantai" class="form-control" />
                        <span asp-validation-for="KasvisRuokalista.Maanantai" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KasvisRuokalista.Tiistai" class="control-label"></label>
                        <input asp-for="KasvisRuokalista.Tiistai" class="form-control" />
                        <span asp-validation-for="KasvisRuokalista.Tiistai" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KasvisRuokalista.Keskiviikko" class="control-label"></label>
                        <input asp-for="KasvisRuokalista.Keskiviikko" class="form-control" />
                        <span asp-validation-for="KasvisRuokalista.Keskiviikko" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KasvisRuokalista.Torstai" class="control-label"></label>
                        <input asp-for="KasvisRuokalista.Torstai" class="form-control" />
                        <span asp-validation-for="KasvisRuokalista.Torstai" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KasvisRuokalista.Perjantai" class="control-label"></label>
                        <input asp-for="KasvisRuokalista.Perjantai" class="form-control" />
                        <span asp-validation-for="KasvisRuokalista.Perjantai" class="text-danger"></span>
                    </div>

                </div>
            }

            <br />

            <div class="rounded-container" style="max-width: 50em;">
                <p>@Localizer["DietaryInfo"] <br />
                    @Localizer["ExampleFormat"]
                    <br />
                    <br />

                    @Localizer["NoNotificationInfo"]<br />
                    @Localizer["HolidayExample"]<br />
                    @Localizer["WeekOffInfo"]<br />
                    <br />
                    @Localizer["VegetarianOptional"]
                </p>
            </div>


            <br />
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToList"]</a>
</div>


