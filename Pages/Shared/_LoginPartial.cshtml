@using Microsoft.AspNetCore.Identity;
@using RuokalistaServer.Auth;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link highlighted text-decoration-underline" href="/RuokalistaAdmin" title="Ruoka-Admin">Ruokalistahallinta</a>
    </li>
        @if (User.Identity?.Name == GlobalFunctions.GetRoot())
        {
            <li class="nav-item">
                <a class="nav-link highlighted text-decoration-underline"  href="/UserAdmin" title="User-Admin">Käyttäjähallinta</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link " style="color: white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                <button type="submit" style="color: white" class="nav-link btn btn-link">Kirjaudu ulos</button>
        </form>
    </li>
}
else
{
    
    <li class="nav-item">
            <a class="nav-link " asp-area="Identity" style="color: white" asp-page="/Account/Login">Kirjaudu</a>
    </li>
}
</ul>
