@model RuokalistaServer.Models.Ruokalista

@{
    ViewData["Title"] = "Poista ruokalista";
}

<h1>Poista ruokalista</h1>

<h3>Oletko varma että haluat poistaa tämän ruokalistan</h3>
<div>
    <h4>Ruokalista</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Viikko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeekId)
        </dd>
        <dt class = "col-sm-2">
            Vuosi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Maanantai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Maanantai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tiistai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tiistai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Keskiviikko)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Keskiviikko)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Torstai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Torstai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Perjantai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Perjantai)
        </dd>
    </dl>
    
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Poista" class="btn btn-danger" /> |
        <a asp-action="Index">Takaisin</a>
    </form>
</div>
